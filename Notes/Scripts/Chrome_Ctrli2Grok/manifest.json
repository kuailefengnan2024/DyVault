{
  "manifest_version": 3,
  "name": "Grok Text Enhancer",
  "version": "1.0.2",
  "description": "Enhance selected text with one click",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}