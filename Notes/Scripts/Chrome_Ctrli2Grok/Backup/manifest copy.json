{
  "manifest_version": 3,
  "name": "Grok Text Enhancer",
  "version": "1.0.1",
  "description": "Enhance selected text with one click",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "tabs",
    "storage",
    "contextMenus",
    "scripting" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}